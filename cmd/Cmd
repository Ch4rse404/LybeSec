def win():
    global acertos
    global erros
    global analise_sinal
    global entrada
    global banca
    global cor_atual
    acertos += 1
    entrada = 0
    #bot = telebot.TeleBot(token)
    p1 = "âœ… GREEN CONFIRMADO NO" + cor_atual
    p2 = "AGUARDE O PROXIMO SINAL ğŸ€"
    enviarMenssagem(p1+"\n\n"+p2)
    #bot.send_sticker(chat_id, 'âœ…âœ…')
    enviarStatus(acertos, erros)
    analise_sinal = False

def loss():
    global acertos
    global analise_sinal
    global erros
    erros += 1
    #bot = telebot.TeleBot(token)
    p1 = "âŒ PERDEMOS MAS RECUPERAMOS NA PROXIMA"
    p2 = "AGUARDE O PROXIMO SINAL ğŸ€"
    enviarMenssagem(p1+"\n\n"+p2)
    enviarStatus(acertos, erros)
    analise_sinal = False


def validate_gale():
    global entrada
    global expected
    global max_gale
    global cor_atual
    global banca
    entrada += 1
    if entrada <= max_gale:

        p1 = "âš ï¸ atenÃ§Ã£o: "+ str(entrada) + " Martingale âš ï¸" 
        p2 = "âš ï¸ entrar novamente no " + cor_atual
        
        enviarMenssagem(p1+"\n\n"+p2)
    else:
        entrada = 0
        loss()

def validate_game(cor):
    if cor[0] == expected:
        win()
    elif cor[0] == 'B':
        win()
    else:
        validate_gale()

def analyze_game(cores):
    global analise_sinal
    global expected

    if cores[0] == 'V' and cores[2] == 'P' and cores[3] == 'B' and cores[4] == 'V':
        analise_sinal = True
        expected = "V"
