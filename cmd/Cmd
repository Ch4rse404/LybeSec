bot = telebot.TeleBot(token)

def enviarMenssagem(text):
    url_base = f'https://api.telegram.org/bot{token}/sendMessage?chat_id={chat_id}&text={text}'
    requests.get(url_base)


enviarMenssagem('''
frase ao iniciar o bot
''')

